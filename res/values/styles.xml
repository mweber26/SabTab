<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.SabTab" parent="android:style/Theme.Holo">
		<item name="android:actionBarTabStyle">@style/SabActionBarTabStyle</item>
	</style>

	<style name="SabActionBarTabStyle" parent="android:style/Widget.Holo.Tab">
		<item name="android:paddingLeft">24dp</item>
		<item name="android:paddingRight">24dp</item>
	</style>

	<style name="QueueKey" parent="@android:style/TextAppearance.Small">
		<item name="android:textSize">18sp</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingBottom">8dp</item>
		<item name="android:paddingRight">32dp</item>
		<item name="android:singleLine">false</item>

		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>

	<style name="QueueValue" parent="@android:style/TextAppearance.Small">
		<item name="android:background">@drawable/text_border</item>
		<item name="android:textSize">16sp</item>
		<item name="android:singleLine">false</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:ellipsize">end</item>

		<item name="android:paddingTop">0dp</item>
		<item name="android:paddingBottom">0dp</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:paddingRight">20dp</item>

		<item name="android:gravity">left|center_vertical</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>
</resources>

